  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ShopCarAPI\ShopCarAPI.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="conf.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>